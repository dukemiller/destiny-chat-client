<UserControl x:Class="destiny_chat_client.Views.Components.ChatBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:destiny_chat_client.Views.Components"
             mc:Ignorable="d" 
             Background="#080808"
             d:DesignHeight="50" d:DesignWidth="480">
    <Border BorderThickness="2" CornerRadius="3" BorderBrush="#222222">
        <DockPanel>
            <DockPanel DockPanel.Dock="Right">
                
            </DockPanel>
            <TextBox Margin="5"
                     DockPanel.Dock="Bottom"
                     Background="#080808"
                     Foreground="#759999"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch" />
        </DockPanel>
    </Border>
</UserControl>
