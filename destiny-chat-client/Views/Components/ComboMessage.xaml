<UserControl x:Class="destiny_chat_client.Views.Components.ComboMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Margin="6,0,0,0"
             mc:Ignorable="d">
    <UserControl.Resources>
        <SolidColorBrush x:Key="Background">#191919</SolidColorBrush>
        <SolidColorBrush x:Key="Text">White</SolidColorBrush>
    </UserControl.Resources>
    <InlineUIContainer Background="{StaticResource Background}">
        <Border BorderThickness="1" CornerRadius="8" Padding="1"
                Height="22"
                BorderBrush="{StaticResource Background}"
                Background="{StaticResource Background}" VerticalAlignment="Center">
            <TextBlock Name="Textblock"
                       Margin="2,0"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="12"
                       TextWrapping="Wrap" Foreground="{StaticResource Text}" Background="{StaticResource Background}">
                <Run Name="Run" />
                <Run> C-C-C-COMBO</Run>
            </TextBlock>
        </Border>
    </InlineUIContainer>
</UserControl>